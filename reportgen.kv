                                text_color: 1,1,1,1
                                bold: True
                    MDBoxLayout:
                        MDRectangleFlatButton:
                            id: t3btn
                            size_hint_x: None
                            width: 50  # Set a fixed width
                            pos_hint: {"center_y": 0.5}
                            text: 'Edit'
                            on_release: app.edit_grade('Term 3', 'term3')
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 0, 0, 0) 
