ScreenManager:
    SignIn:
    MainScreen:
    CourseScreen:
    Grades:
    Report:

<SignIn>
    name: 'signin'
    MDFloatLayout:
        TextInput:
            id: id
            size_hint: (None, None)
            width: 500
            height: 50
            font_size: "15sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            multiline: False
            on_text_validate: password.focus = True
            hint_text: 'ID'
        TextInput:
            id: password
            size_hint: (None, None)
            width: 500
            height: 50
            font_size: "15sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            on_text_validate: app.sign_in(id.text, password.text)
            password: True
            hint_text: 'Password'
        MDRaisedButton:
            text: 'Sign in'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release: app.sign_in(id.text, password.text)

<MainScreen>:
    name: 'main'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_main
        MDTopAppBar:
            id: header
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
            right_action_items: [["plus", lambda x: app.switch_to_add_item_screen()]]
        MDBoxLayout:
            id: box_table
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 1
            ScrollView:
                MDList:
                    radius: [0,0,0,0]
                    OneLineListItem:
                        text: "Courses"
                        on_release: app.get_main_screen("courses")
                    OneLineListItem:
                        text: "Classes"
                        on_release: app.get_main_screen("classes")
<CourseScreen>
    name: 'course'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_course
        MDTopAppBar:
            title: "ReportGen"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
            right_action_items: [["plus", lambda x: app.switch_to_add_item_screen()]]
        MDBoxLayout:
            orientation: 'vertical'
            id: box_table
            size_hint: (1, 1)
    MDNavigationDrawer:
        id: nav_drawer
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 1
            ScrollView:
                MDList:
                    radius: [0,0,0,0]
                    OneLineListItem:
                        text: "Courses"
                        on_release: app.get_main_screen("courses")
                    OneLineListItem:
                        text: "Classes"
                        on_release: app.get_main_screen("classes")
<Grades>
    name: 'grades'

    MDGridLayout:
        id: grid_grades
        cols: 3
        TextInput:
            id: term1
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 1 %'
        TextInput:
            id: term2
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 2 %'
        TextInput:
            id: term3
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 3 %'
<Report>
    name: 'report'

    TextInput:
        id: term
        size_hint: (None, None)
        width: 500
        height: 50
        font_size: "15sp"
        pos_hint: {"center_x": 0.3, "center_y": 0.5}
        multiline: False
        hint_text: 'Which Term? (term1, term2, term3)'
