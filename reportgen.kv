ScreenManager:
    MainScreen:
    CourseScreen:
    Grades:

<MainScreen>:
    name: 'main'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_main
        MDTopAppBar:
            title: "ReportGen"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: None]]
            right_action_items: [["plus", lambda x: app.switch_to_add_item_screen()]]
<CourseScreen>
    name: 'course'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_course
        MDTopAppBar:
            title: "ReportGen"
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: None]]
            right_action_items: [["plus", lambda x: app.switch_to_add_item_screen()]]
<Grades>
    name: 'grades'

    MDGridLayout:
        id: box_grades
        TextInput:
            id: grade
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Input %'
