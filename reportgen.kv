ScreenManager:
    SignIn:
    MainScreen:
    CourseScreen:
    Grades:
    Report:

<SignIn>
    name: 'signin'
    MDFloatLayout:
        MDLabel:
            text: 'ReportGen'
            pos_hint: {'center_x':0.9, "center_y": 0.7}
            theme_text_color: "Custom"
            text_color: 'green'
            font_size: "30sp"
            bold: True
        MDTextField:
            id: id
            hint_text: 'ID'
            hint_text_mode:'focused'
            mode: "fill"
            size_hint_x:None
            width:500
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            multiline: False
            line_color_focus: 'green'
            on_text_validate: password.focus = True
            
        MDTextField:
            id: password
            mode: "fill"
            color_mode: 'accent'
            size_hint_x:None
            width:500
            font_size: "15sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            line_color_focus: 'green'
            on_text_validate: app.sign_in(id.text, password.text)
            password: True
            hint_text: 'Password'
        MDRectangleFlatButton:
            text: 'Sign in'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            text_color: 'green'
            line_color: 'green'
            on_release: app.sign_in(id.text, password.text)

<MainScreen>:
    name: 'main'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_main
        MDTopAppBar:
            id: header
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
        MDBoxLayout:
            id: box_table
            padding: 0
            spacing: 0
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 0, 0, 0) 
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 1
            MDNavigationDrawerHeader:
                title: "Menu"
            ScrollView:
                MDList:
                    radius: [0,0,0,0]
                    OneLineListItem:
                        text: "Courses"
                        on_release: app.get_main_screen("courses")
                    OneLineListItem:
                        text: "Classes"
                        on_release: app.get_main_screen("classes")
<CourseScreen>
    name: 'course'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_course
        MDTopAppBar:
            title: "ReportGen"
            title_color: 1, 1, 1, 1
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
        MDBoxLayout:
            orientation: 'vertical'
            id: box_table
            size_hint: (1, 1)
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 0, 0, 0) 
        BoxLayout:
            orientation: "vertical"
            size_hint: 0.8, 1
            ScrollView:
                MDList:
                    radius: [0,0,0,0]
                    OneLineListItem:
                        text: "Courses"
                        on_release: app.get_main_screen("courses")
<Grades>
    name: 'grades'

    MDGridLayout:
        id: grid_grades
        cols: 3
        TextInput:
            id: term1
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 1 %'
        TextInput:
            id: term2
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 2 %'
        TextInput:
            id: term3
            size_hint: (None, None)
            width: 200
            height: 200
            font_size: "30sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            hint_text: 'Term 3 %'
<Report>
    name: 'report'

    TextInput:
        id: term
        size_hint: (None, None)
        width: 500
        height: 50
        font_size: "15sp"
        pos_hint: {"center_x": 0.3, "center_y": 0.5}
        multiline: False
        hint_text: 'Which Term? (term1, term2, term3)'
