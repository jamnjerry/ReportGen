ScreenManager:
    SignIn:
    MainScreen:
    CourseScreen:
    Grades:
    Report:
    Classes:

<SignIn>
    name: 'signin'
    MDFloatLayout:
        MDLabel:
            text: 'ReportGen'
            pos_hint: {'center_x':0.9, "center_y": 0.7}
            theme_text_color: "Custom"
            text_color: 'green'
            font_size: "30sp"
            bold: True
        MDTextField:
            id: id
            hint_text: 'ID'
            hint_text_mode:'focused'
            mode: "fill"
            size_hint_x:None
            width:500
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            multiline: False
            line_color_focus: 'green'
            on_text_validate: password.focus = True
            
        MDTextField:
            id: password
            mode: "fill"
            color_mode: 'accent'
            size_hint_x:None
            width:500
            font_size: "15sp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            multiline: False
            line_color_focus: 'green'
            on_text_validate: app.sign_in(id.text, password.text)
            password: True
            hint_text: 'Password'
        MDRectangleFlatButton:
            text: 'Sign in'
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            text_color: 'green'
            line_color: 'green'
            on_release: app.sign_in(id.text, password.text)

<MainScreen>:
    name: 'main'

    MDBoxLayout:
        orientation: 'vertical'
        id: box_main
        MDTopAppBar:
            id: header
            md_bg_color: app.theme_cls.primary_color
            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
            specific_text_color: 'white'
            elevation: 0
            bold: True
        MDFloatLayout:
            orientation: 'vertical'
            id: float_table
            size_hint: (1, 1)
            # rows:2
            # MDGridLayout:
            #     cols: 3
            #     MDLabel:
            #         text: 'ID'
            #     MDLabel:
            #         text: 'Course Name'
            #     MDLabel:
            #         text: 'Class'
            ScrollView:
                id: scroll_main
                x_scroll: False
    MDNavigationDrawer:
        id: nav_drawer
        radius: (0, 0, 0, 0) 
        elevation: 0.5
        type: 'modal'
        enable_swiping: False
        close_on_click: True
        scrim_color: 0, 0, 0, .8
        MDNavigationDrawerMenu:
            orientation: "vertical"
            size_hint: 0.8, 1
            MDNavigationDrawerHeader:
                title: "ReportGen"
                title_color: 'green'
                padding: "6dp", 0, 0, "30dp"
                title_bold:True
            MDNavigationDrawerLabel:
                text: 'Screens'
            MDNavigationDrawerDivider:
            MDNavigationDrawerItem:
                text: "Courses"
                on_release: app.get_main_screen("courses")
                icon: 'home'
            MDNavigationDrawerItem:
                text: "Classes"
                on_release: app.get_main_screen("classes")
                icon: 'book'

